<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_pagar"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_pagar_paypal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            style="@style/Base.Widget.AppCompat.ListView.Menu">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_paypal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:textStyle="bold|italic"
                android:text="Pagar con Paypal"
                android:id="@+id/textView5"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/crear_boton"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp"
            android:background="#C8C9CB" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_pagar_tarjeta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            style="@style/Base.Widget.AppCompat.ListView.Menu">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_tarjeta_02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                android:textColor="#000000"
                android:text="Pagar con tarjeta"
                android:id="@+id/textView6"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <View
            android:id="@+id/divider22"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/crear_boton"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp"
            android:background="#C8C9CB" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_pagar_domicilio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            style="@style/Base.Widget.AppCompat.ListView.Menu">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView4"
                android:src="@drawable/ic_pagar_domicilio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                android:textColor="#000000"
                android:text="Pago a Domicilio"
                android:id="@+id/textView7"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>