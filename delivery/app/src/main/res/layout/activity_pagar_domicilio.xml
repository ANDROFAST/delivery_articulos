<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagarConTarjetaAceptado">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/myPrimaryColor"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="¡Felicitaciones!"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/textView7"
                android:layout_gravity="center_vertical" />

        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/linearLayout" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Nombre de Usuario"
                android:textColor="#000000"
                android:textStyle="bold|italic"
                android:textSize="17dp"
                android:id="@+id/txtNombreUsuarioPagoDomicilio"
                android:layout_gravity="left" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="0dp"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:background="@drawable/imagen_pago_a_domicilio_p"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Su pedido ha sido registrado correctamente, en el transcurso de las próximas 24 horas estará llegando su pedido a domicilio!."
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:textSize="12dp"
                    android:id="@+id/textViewasdd51"
                    android:layout_gravity="right" />

            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/crear_boton"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="10dp"
                android:background="@color/myPrimaryDarkColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="GRACIAS POR SU PREFERENCIA!"
                android:textColor="#000080"
                android:textStyle="bold|italic"
                android:textSize="17dp"
                android:id="@+id/textView00012112"
                android:layout_gravity="right" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="TOTAL: $."
                    android:textColor="#000000"
                    android:textStyle="bold|italic"
                    android:textSize="15dp"
                    android:id="@+id/textViewxvqw"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="450.2"
                    android:textColor="#000000"
                    android:textStyle="bold|italic"
                    android:textSize="15dp"
                    android:id="@+id/txtTotalPagoADomicilio"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/estilo_boton_dark"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:text="Continuar"
                android:id="@+id/btnPDDDContinuar"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>