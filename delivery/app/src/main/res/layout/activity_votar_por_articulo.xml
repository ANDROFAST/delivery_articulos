<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".VotarPorArticulo">

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/myPrimaryColor"
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:id="@+id/btnDeVotarAArticulo"
                android:background="@drawable/ic_atras_02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Votar por artÃ­culo"
                android:layout_margin="0dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/textView7"
                android:layout_gravity="center_vertical" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leche Gloria X510 ml"

                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold|italic"
                android:id="@+id/lblVANombreArticulo"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView15"
                    android:src="@drawable/ic_star_yellow"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView16"
                    android:src="@drawable/ic_star_yellow"
                    android:layout_gravity="center_vertical" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView17"
                    android:src="@drawable/ic_star_yellow"
                    android:layout_gravity="center_vertical" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView18"
                    android:src="@drawable/ic_star_yellow"
                    android:layout_gravity="center_vertical" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:id="@+id/imageView19"
                    android:src="@drawable/ic_star_yellow"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:text="+1"
                    android:textSize="12dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_dark"
                    android:background="@drawable/estilo_boton_dark"
                    android:id="@+id/btnMasUno"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:text="+2"
                    android:textSize="12dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_dark"
                    android:background="@drawable/estilo_boton_dark"
                    android:id="@+id/btnMasDos"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:text="+3"
                    android:textSize="12dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_dark"
                    android:background="@drawable/estilo_boton_dark"
                    android:id="@+id/btnMasTres"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:text="+4"
                    android:textSize="12dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_dark"
                    android:background="@drawable/estilo_boton_dark"
                    android:id="@+id/btnMasCuatro"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:text="+5"
                    android:textSize="12dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_dark"
                    android:background="@drawable/estilo_boton_dark"
                    android:id="@+id/btnMasCinco"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>